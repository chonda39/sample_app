<% provide(:title, 'Sign up') %>
<% provide(:submitlabel, "Create my account") %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
  	<%= form_for(@user) do |f| %>
  		<%= render 'shared/error_messages', object: f.object %>

    	<%= render 'userform', f: f %>
    	<%= f.submit yield(:submitlabel), class: "btn btn-large btn-primary" %>

 	<% end %>
  </div>
</div>